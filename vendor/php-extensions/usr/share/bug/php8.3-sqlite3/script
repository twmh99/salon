#!/bin/sh

MATCH="^[[:space:]]*($|;)"

echo "==== Additional PHP 8.3 information ====" >&3
echo "" >&3
echo "++++ PHP @PHP_VERSION SAPI (php8.3query -S): ++++" >&3
/usr/sbin/php8.3query -S >&3
echo "" >&3
echo "++++ PHP 8.3 Extensions (php8.3query -M -v): ++++" >&3
/usr/sbin/php8.3query -M -v >&3
echo "" >&3

echo "++++ Configuration files: ++++" >&3
for dsoname in sqlite3 pdo_sqlite; do
    inifile=${dsoname}.ini
    echo "**** /etc/php/8.3/mods-available/$dsoname.ini ****" >&3
    grep -Ev "$MATCH" "/etc/php/8.3/mods-available/$dsoname.ini" >&3
    echo "" >&3
done
